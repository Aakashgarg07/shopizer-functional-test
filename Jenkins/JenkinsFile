pipeline {

    agent any

    tools {
        maven 'maven'
    }

    stages {

        stage('Run Functional Tests') {

            steps {
                sh 'mvn clean test'

            }
        }

        stage('Publish Test Report') {

            steps {
                echo 'Publishing Report ..'
                step([$class: 'Publisher', reportFilenamePattern: 'target/surefire-reports/testng-results.xml'])
            }
        }

    }

}